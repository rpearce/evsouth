  /[if IE 7 ]            %html{class: "ie ie7", lang: "en"}
  /[if IE 8 ]            %html{class: "ie ie8", lang: "en"}
  /[if (gte IE 9)|!(IE)] %html{lang: "en"}
  %head
    / Basic Page Needs
    / ==================================================
    %title EVSOUTH - Services
    %meta{name: 'description', content: ''}
    %meta{name: 'author', content: 'Robert Pearce'}
    %meta{name: 'keywords', content: ''}

    / Mobile Specific Metas
    / ==================================================
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1'}

    / CSS
    / ==================================================
    %link{rel: 'stylesheet', type: 'text/css', href: '../stylesheets/css/main_styles.css'}
    %link{rel: 'stylesheet', type: 'text/css', href: '../stylesheets/lib/skeleton.css'}
    %link{rel: 'stylesheet', type: 'text/css', href: '../stylesheets/lib/layout.css'}
    / %link{rel: 'stylesheet', type: 'text/css', href: '../stylesheets/lib/base.css'}

    / Favicons
    / ==================================================
    / %link{rel: "shortcut icon", href: "images/favicon.ico"}
    / %link{rel: "apple-touch-icon", href: "images/apple-touch-icon.png"}
    / %link{rel: "apple-touch-icon", sizes: "72x72", href: "images/apple-touch-icon-72x72.png"}
    / %link{rel: "apple-touch-icon", sizes: "114x114", href: "images/apple-touch-icon-114x114.png"}

  %body
    .container
      .sixteen.columns
        %nav.center
          %ul.navbar
            %li.apple-button.first
              %a{href: '/'} Home
            %li.apple-button
              %a{href: '/products'} Products
            %li.apple-button
              %a{href: '/services'} Services
            %li.apple-button
              %a{href: '/about'} About
            %li.apple-button.last
              %a{href: '/contact'} Contact
        .main
          .content.center
            %section.logo
              %img{src: '/images/evsouth-logo.png'}
            %section.tagline.left
              %img{src: '/images/plugin.jpg'}
            %section.plug
              %img{src: '/images/plug.jpg'}
            .clear
      .clear
      %section.bottom-links.center
        .four.columns
          %header find a station
          %img{src: '/images/map.jpg'}
        .four.columns
          %header residential
          %img{src: '/images/buildings.jpg'}
        .four.columns
          %header commercial
          %img{src: '/images/shops.jpg'}
        .four.columns
          %header fleet solutions
          %img{src: '/images/vans.jpg'}
      .clear
      %br
      %br
      %br


